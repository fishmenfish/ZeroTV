{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ZeroTV",
  "version": "1.0.0",
  "identifier": "com.fishmenfish.zerotv",
  "build": {
    "frontendDist": "../dist/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "ZeroTV",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "fishmenfish",
    "copyright": "Copyright Â© 2026 fishmenfish",
    "shortDescription": "Ultra-lightweight IPTV player",
    "longDescription": "ZeroTV is a zero bloat IPTV player - Ultra-lightweight, blazing fast streaming experience for your favorite channels."
  }
}
