{
  "name": "zerotv",
  "version": "1.1.0",
  "description": "Zero bloat IPTV player - Ultra-lightweight, blazing fast",
  "author": "fishmenfish",
  "scripts": {
    "ng": "ng",
    "dev": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "installer": "pnpm build:prod && pnpm tauri:build",
    "installer:debug": "pnpm build && pnpm tauri:build:debug",
    "format": "prettier --write \"src/**/*.{ts,html,css,json}\"",
    "clean": "rimraf dist .angular node_modules src-tauri/target"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "@angular/cdk": "^21.1.3",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-shell": "^2.3.5",
    "hls.js": "^1.6.15",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.3",
    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^21.1.0",
    "@tauri-apps/cli": "^2.10.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.2"
  }
}